	journal = {Physics of Fluids},
	author = {Cui, Zhiwen and Zhao*, Lihao},
	month = dec,
	year = {2022},
	pages = {123316}
}
@article{qiu_gyrotactic_2022,
	title = {Gyrotactic mechanism induced by fluid inertial torque for settling elongated microswimmers},
	volume = {4},
