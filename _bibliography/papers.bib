	title = {On the existence and formation of multi-scale particle streaks in turbulent channel flows},
	volume = {935},
	copyright = {All rights reserved},
	issn = {0022-1120, 1469-7645},
	url = {https://www.cambridge.org/core/journals/journal-of-fluid-mechanics/article/on-the-existence-and-formation-of-multiscale-particle-streaks-in-turbulent-channel-flows/D806239B0E128A80F8585D4471E6C459},
